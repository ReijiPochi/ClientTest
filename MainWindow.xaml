<Window x:Class="ClientTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClientTest"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Button x:Name="Send" Content="Send" Height="50" VerticalAlignment="Top" Margin="10" HorizontalAlignment="Left" Width="100" Click="Send_Click"/>
        <TextBox x:Name="ConsoleTb" Margin="0,110,0,0" VerticalScrollBarVisibility="Visible"/>
    </Grid>
</Window>
